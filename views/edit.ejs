<h1>Edit Bill</h1>

<h2><%=bill.name%></h2>

<form class="form" action="/<%=bill.id%>?_method=PUT" method="POST">
    <div class="inputParent">
        <label for="name">Bill Name:</label>
        <input type="text" name="name" value="<%=bill.name%>">
        <label for="price">Price:</label>
        <input type="text" name="price" value="<%=bill.price%>">
    </div>

    <input type="submit">
    <a href="/">Cancel</a>

</form>
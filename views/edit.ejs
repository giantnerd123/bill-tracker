<title>Edit Bill</title>
</head>


<body class="bg-light container">
    
<h1 class="bg-dark text-white p-4 m-2 container h1 rounded">Edit Bill</h1>

<h2><%=bill.name%></h2>

<form class="form" action="/<%=bill.id%>?_method=PUT" method="POST">
    <div class="form-group">
        <label for="name">Bill Name:</label>
        <input type="text" name="name" value="<%=bill.name%>">
        <label for="price">Price:</label>
        <input type="text" name="price" value="<%=bill.price%>">
    </div>

    <input type="submit">
    <a href="/">Cancel</a>

</form>


<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
